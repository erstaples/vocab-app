# Environment variables for the vocabulary app

# Set to 'true' to use PostgreSQL database for persistence
# Set to 'false' to use localStorage (default)
USE_POSTGRES=true

# PostgreSQL database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vocab_app
POSTGRES_MAX_CONNECTIONS=20

# JWT configuration
JWT_SECRET=vocab-app-secret-key-change-in-production
JWT_EXPIRES_IN=7d
